<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="lsspEditorBackground">@color/colorEditorBG</item>
        <!-- main height, margin properties: the additional layer here
             enables the UI dimensions to be changed based on theme -->
        <!-- full screen UI dimensions -->
        <item name="mainHeight">@dimen/mainFS_height</item>
        <item name="mainMarginHorizontal">@dimen/mainFS_marginHorizontal</item>
        <item name="mainMarginTop">@dimen/mainFS_marginTop</item>
        <item name="mainMarginBottom">@dimen/mainFS_marginBottom</item>
        <item name="fabMargin">@dimen/fabFS_margin</item>
    </style>

    <!-- NoActionBar variant is used for AppCompatActivity, which replaces
         system ActionBar with its own, hence it is NoActionBar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentBG" parent="AppTheme.NoActionBar">
        <!-- common across all transparent background AppCompat -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <!-- Widget-like UI specific customization -->
        <item name="mainHeight">@dimen/main_height</item>
        <item name="mainMarginHorizontal">@dimen/main_marginHorizontal</item>
        <item name="mainMarginTop">@dimen/main_marginTop</item>
        <item name="mainMarginBottom">@dimen/main_marginBottom</item>
        <item name="fabMargin">@dimen/fab_margin</item>
    </style>

    <!-- Night theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/nightColorAccent</item>
        <item name="lsspEditorBackground">@color/colorEditorBGDark</item>
        <!-- full screen UI dimensions -->
        <item name="mainHeight">@dimen/mainFS_height</item>
        <item name="mainMarginHorizontal">@dimen/mainFS_marginHorizontal</item>
        <item name="mainMarginTop">@dimen/mainFS_marginTop</item>
        <item name="mainMarginBottom">@dimen/mainFS_marginBottom</item>
        <item name="fabMargin">@dimen/fabFS_margin</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent="AppTheme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Dark.NoActionBar.TransparentBG" parent="AppTheme.Dark.NoActionBar">
        <!-- common across all transparent background AppCompat -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <!-- PENDING: menu items somehow remain white background black text -->

        <!-- Widget-like UI specific customization -->
        <item name="mainHeight">@dimen/main_height</item>
        <item name="mainMarginHorizontal">@dimen/main_marginHorizontal</item>
        <item name="mainMarginTop">@dimen/main_marginTop</item>
        <item name="mainMarginBottom">@dimen/main_marginBottom</item>
        <item name="fabMargin">@dimen/fab_margin</item>
    </style>

    <!-- themes for the support action bar itself stays the same  independent of normal / dark theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
